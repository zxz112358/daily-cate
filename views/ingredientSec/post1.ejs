<!DOCTYPE html>
<html>

<head>
    <title><%= name%>-<%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
</head>

<% include ../header.ejs %>

<body background="../images/background2.jpg">
<div class="container-fluid text-center" style="background-color: gold">
    <h1><%= title%></h1>
    <h2><%= author%></h2>
</div>
<div class="container-fluid" style="margin-top:7cm">
    <% for (var i = 0; i < 3; i++) { %>
        <%if (i%2==0){%>
        <div class="col-md-6" style="margin-top:-7cm">
            <img src="../images/pic.jpg">
            <h1>text</h1>
        </div>

    <% } %>
    <%if (i%2==1){%>
        <div class="col-md-6 offset-6" style="margin-top:-7cm">
            <img src="../images/pic.jpg">
            <h1>text</h1>
        </div>
    <% } %>

    <% } %>
</div>

</body>

</html>