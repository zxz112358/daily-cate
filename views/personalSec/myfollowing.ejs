<!DOCTYPE html>
<html>

<head>
    <title><%= name%>-<%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
</head>

<% include ../header.ejs %>

<body background="../images/pattern.svg">
<div class="container-fluid" style="padding: 10px; background-color: #ffc107; text-align:center">
    <img src="../images/pic.jpg" class="img-thumbnail img-circle" style="width: 60px;margin: 0 auto">
    <p>
    <h5 class="text-center">Name<br><small>Description</small></h5>
    </p>
    <p>
        <button class="btn btn-small" type="button">New post</button>
        <button class="btn btn-small" type="button">Modify info</button>
    </p>
</div>
<div class="container-fluid" style="padding: 10px">
    <div class="row">
        <div class="col-2" style="text-align:right">
            <p>
                <a href="./perpage" class="btn btn-warning" aria-pressed="true" role="button" style="width:75%">My Posts</a><br>
                <a href="./mycomment" class="btn btn-warning" aria-pressed="true" role="button" style="width:75%">My Comments</a><br>
                <a href="./myfollowing" class="btn btn-warning active" aria-pressed="true" role="button" style="width:75%">My Followings</a><br>
                <a href="./myfollower" class="btn btn-warning" aria-pressed="true" role="button" style="width:75%">My Followers</a><br>
                <a href="./mylike" class="btn btn-warning" aria-pressed="true" role="button" style="width:75%">My Likes</a>
            </p>
        </div>
        <div class="col-10">
            <div class="container-fluid" style="padding:10px">
                <div class="row">
                    <% for (var i = 0; i < 2; i++) { %>
                    <div class="col-3">
                        <a href="./userpostpage">
                            <img src="../images/pic.jpg" class="img-thumbnail img-circle" style="width: 60px">
                            <h5>name<br><small>decription</small></h5>
                        </a>
                    </div>

                    <% } %>
                </div>

            </div>
        </div>
    </div>

</div>

</body>

</html>